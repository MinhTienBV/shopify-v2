<section class="relative z-1 animation p-6 font-sans font-normal leading-3 text-white bg-blue-100 text-inherit-child module md:leading-4 lg:font-semibold mod-banner-internal mod-slider" >
  <div class="absolute -z-1 inset-0 hidden bg-{{ section.settings.desktop_content_position }} bg-no-repeat bg-cover opacity-{{section.settings.image_overlay_opacity}} lg:block lazy"
      data-src="{{ section.settings.image | image_url }}">
    </div>
    <div class="absolute -z-1 inset-0 bg-{{ section.settings.desktop_content_position }} bg-no-repeat bg-cover opacity-{{section.settings.image_overlay_opacity}} lg:hidden lazy"
      data-src="{{ section.settings.image | image_url }}">
    </div>
  <div class="flex items-center min-h-banner">
    <div class="container z-10 max-w-4xl">
      <div class="py-20 text-lg {{ section.settings.mobile_content_alignment }} md:{{ section.settings.desktop_content_alignment }} md:max-w-3xl anima-bottom ">
        {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="banner__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
              <span>{{ block.settings.heading | escape }}</span>
            </h2>
          {%- when 'text' -%}
            <div class="banner__text mb-10 {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
              <span>{{ block.settings.text | escape }}</span>
            </div>
          {%- when 'buttons' -%}
            <div class="banner__buttons{% if block.settings.button_label_1 != blank and block.settings.button_label_2 != blank %} banner__buttons--multiple{% endif %}" {{ block.shopify_attributes }}>
              {%- if block.settings.button_label_1 != blank -%}
                <a{% if block.settings.button_link_1 == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link_1 }}"{% endif %} class="no-underline btn {% if block.settings.button_style_secondary_1 %} btn-outline-primary {% else %} btn-primary {% endif %}">{{ block.settings.button_label_1 | escape }}</a>
              {%- endif -%}
              {%- if block.settings.button_label_2 != blank -%}
                <a{% if block.settings.button_link_2 == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link_2 }}"{% endif %} class="no-underline btn {% if block.settings.button_style_secondary_2 %} btn-outline-primary {% else %} btn-primary {% endif %}">{{ block.settings.button_label_2 | escape }}</a>
              {%- endif -%}

            </div>
        {%- endcase -%}
      {%- endfor -%}
      </div>
    </div>
    
  </div>
</section>

